<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.starsky.meteor.db.op.UserInfoEntity" table="user_info" schema="meteor">
        <id name="id">
            <column name="_id" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>
        <property name="userPhone">
            <column name="user_phone" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="userPassword">
            <column name="user_password" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="userNickname">
            <column name="user_nickname" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>